{
  "name": "board4you",
  "version": "1.0.6",
  "description": "client side of board4you",
  "repository": "https://github.com/GachiLord/board4you",
  "main": "./public/main.js",
  "scripts": {
    "build": "cp ./node_modules/pdfjs-dist/build/pdf.worker.js ./public/pdf.worker.js; ./node_modules/.bin/esbuild ./src/entries/web.tsx --bundle --outdir=./public --loader:.png=dataurl --minify",
    "dev": "cp ./node_modules/pdfjs-dist/build/pdf.worker* ./public/; ./node_modules/.bin/esbuild ./src/entries/web.tsx --bundle --sourcemap --outdir=./public --loader:.png=dataurl --watch",
    "buildMain": "cp ./node_modules/pdfjs-dist/build/pdf.worker.js ./public/pdf.worker.js; ./node_modules/.bin/esbuild ./src/entries/desktop.tsx --bundle --outdir=./public --loader:.png=dataurl --minify; electron-esbuild build",
    "devMain": "electron-esbuild dev",
    "electron": "electronmon .",
    "buildApp": "cp ./node_modules/pdfjs-dist/build/pdf.worker.js ./public/pdf.worker.js; ./node_modules/.bin/esbuild ./src/entries/desktop.tsx --bundle --outdir=./public --loader:.png=dataurl --minify; electron-esbuild build; electron-builder -wl",
    "release": "cp ./node_modules/pdfjs-dist/build/pdf.worker.js ./public/pdf.worker.js; ./node_modules/.bin/esbuild ./src/entries/desktop.tsx --bundle --outdir=./public --loader:.png=dataurl --minify; electron-esbuild build; electron-builder -wl",
    "test": "jest"
  },
  "build": {
    "fileAssociations": [
      {
        "ext": "png",
        "description": "Png File",
        "role": "Editor"
      },
      {
        "ext": "pdf",
        "name": "pdf File",
        "role": "Editor"
      },
      {
        "ext": "zip",
        "name": "Zip File",
        "role": "Editor"
      }
    ],
    "appId": "board4you",
    "publish": [
      "github"
    ],
    "win": {
      "files": [
        "public/desktop.html",
        "public/main.js",
        "public/preload.js",
        "public/desktop.js",
        "public/desktop.css"
      ],
      "target": "nsis"
    },
    "linux": {
      "files": [
        "public/desktop.html",
        "public/main.js",
        "public/preload.js",
        "public/desktop.js",
        "public/desktop.css"
      ],
      "target": "AppImage"
    }
  },
  "author": "GachiLord",
  "license": "GPL",
  "dependencies": {
    "@flaticon/flaticon-uicons": "^1.7.1",
    "@react-spring/web": "^9.7.3",
    "@reduxjs/toolkit": "^1.9.7",
    "@types/adm-zip": "^0.5.3",
    "@types/react": "^18.2.31",
    "@types/react-redux": "^7.1.28",
    "adm-zip": "^0.5.10",
    "bootstrap": "^5.3.2",
    "electron-updater": "^5.3.0",
    "fbemitter": "^3.0.0",
    "is-url": "^1.2.4",
    "jspdf": "^2.5.1",
    "konva": "^8.4.3",
    "pdfkit": "^0.13.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.1",
    "react-bootstrap-range-slider": "^3.0.8",
    "react-color": "^2.19.3",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "react-konva": "^18.2.10",
    "react-redux": "^8.1.3",
    "react-router": "^6.17.0",
    "react-router-bootstrap": "^0.26.2",
    "reconnecting-websocket": "^4.4.0",
    "semantic-ui-react": "^2.1.4",
    "tinykeys": "^2.1.0",
    "use-image": "^1.1.1",
    "use-local-storage-state": "^18.3.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.2.0",
    "@types/fbemitter": "^2.0.34",
    "@types/jest": "^29.5.6",
    "@types/pdfkit": "^0.13.1",
    "@types/react-color": "^3.0.9",
    "@types/react-dom": "^18.2.14",
    "@types/react-router-bootstrap": "^0.26.5",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "css-loader": "^6.8.1",
    "electron": "26.4.1",
    "electron-builder": "^22.14.13",
    "electron-esbuild": "^8.0.0",
    "electronmon": "^2.0.2",
    "esbuild": "^0.19.5",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "pdfjs-dist": "^3.11.174",
    "prop-types": "^15.8.1",
    "react-router-dom": "^6.17.0",
    "typescript": "^5.2.2"
  }
}
